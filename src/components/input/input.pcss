.mfm-input {
  padding: 8px 12px;
  border: 1px solid var(--mfm-color-gray);
  border-radius: 4px;
  background: var(--mfm-color-white);
  color: var(--mfm-color-asphalt);
  outline: none;
  transition: border-color .2s ease;

  &:focus {
    border-color: var(--mfm-color-asphalt);
  }

  &_invalid,
  &:invalid {
    border-color: var(--mfm-color-red);
  }
}