{{#extend 'authLayout/authLayout' title='Sign in'}}
	{{#content 'inputs'}}
		{{> 'formInput/formInput'
			name='login'
			label='Username'
			placeholder='Enter username'
		}}
		{{> 'formInput/formInput'
			name='password'
			label='Password'
			type='password'
			placeholder='Enter password'
		}}
	{{/content}}
	{{#content 'buttons'}}
		{{#> 'button/button' variant='primary'}}
			Sign in
		{{/'button/button'}}
		{{#> 'link/link' href='#'}}
			Sign up
		{{/'link/link'}}
	{{/content}}
{{/extend}}
