{{#extend 'authLayout/authLayout' title='Sign up'}}
	{{#content 'inputs'}}
		{{> 'formInput/formInput'
			name='email'
			label='Email'
			placeholder='Enter email'
			type='email'
		}}
		{{> 'formInput/formInput'
			name='login'
			label='Username'
			placeholder='Enter username'
		}}
		{{> 'formInput/formInput'
			name='first_name'
			label='First name'
			placeholder='Enter first name'
		}}
		{{> 'formInput/formInput'
			name='second_name'
			label='Second name'
			placeholder='Enter second name'
		}}
		{{> 'formInput/formInput'
			name='phone'
			label='Phone number'
			placeholder='Enter phone number'
			type='tel'
		}}
		{{> 'formInput/formInput'
			name='password'
			label='Password'
			type='password'
			placeholder='Enter password'
		}}
	{{/content}}
	{{#content 'buttons'}}
		{{#> 'button/button' variant='primary'}}
			Sign up
		{{/'button/button'}}
		{{#> 'button/button' variant='inline'}}
			Sign in
		{{/'button/button'}}
	{{/content}}
{{/extend}}
